<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
        <h2 class="text-3xl font-bold mb-6 text-center text-red-500">Here are our registered homes:</h2>
        <div class="grid grid-cols-1 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div class="bg-gray-100 rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row">
              <img src="https://hips.hearstapps.com/hmg-prod/images/santorini-canavesvilla-01-1529341901.jpg"
                alt="<%= home.houseName %> photo" class="w-full md:w-48 h-48 object-cover">
              <div class="p-6 flex-1 flex flex-col justify-between">
                <div>
                  <h3 class="text-2xl font-bold text-gray-800 mb-2">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-gray-600 mb-1"><span class="font-semibold">Location:</span>
                    <%= home.location %>
                  </p>
                  <p class="text-gray-600 mb-1"><span class="font-semibold">Price:</span> ₹<%= home.price %> / night</p>
                </div>
                <div class="flex items-center mt-4">
                  <span class="text-yellow-500 text-xl mr-2">★</span>
                  <span class="text-gray-700 font-semibold">
                    <%= home.rating %>
                  </span>
                </div>
                <button class="bg-green-500">Book</button>
              </div>

            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>